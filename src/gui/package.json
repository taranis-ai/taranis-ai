    "@sentry/vue": "^7.92.0",
    "axios": "^1.6.5",
    "codemirror": "^6.0.1",
    "js-base64": "^3.7.5",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.3.4",
    "vue-chartjs": "5.2.0",
    "vue-codemirror": "^6.1.1",
    "vue-datepicker-next": "^1.0.3",
    "vue-dompurify-html": "^4.1.4",
